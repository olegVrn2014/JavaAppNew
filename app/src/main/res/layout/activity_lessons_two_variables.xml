<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lessons_java.LessonsTwoVariablesActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    style="@style/textViewZagolovok"
                    android:text="@string/variables"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessons02_01"/>

                <ImageView
                    android:contentDescription="@string/less02_image01"
                    android:id="@+id/less02_image01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessons02_02"/>

                <ImageView
                    android:contentDescription="@string/less02_image02"
                    android:id="@+id/less02_image02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessons02_03"/>

                <ImageView
                    android:contentDescription="@string/less02_image03"
                    android:id="@+id/less02_image03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessons02_04"/>

                <ImageView
                    android:contentDescription="@string/less02_image04"
                    android:id="@+id/less02_image04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessons02_05"/>

                <ImageView
                    android:contentDescription="@string/less02_image05"
                    android:id="@+id/less02_image05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessons02_06"/>

                <ImageView
                    android:contentDescription="@string/less02_image06"
                    android:id="@+id/less02_image06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessons02_07"/>

                <ImageView
                    android:contentDescription="@string/less02_image07"
                    android:id="@+id/less02_image07"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textViewZagolovok"
                    android:text="@string/var"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessons02_08"/>

                <ImageView
                    android:contentDescription="@string/less02_image08"
                    android:id="@+id/less02_image08"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:layout_marginBottom="25dp"
                    android:text="@string/lessons02_09"/>

                <ImageView
                    android:contentDescription="@string/less02_image09"
                    android:id="@+id/less02_image09"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textViewZagolovok"
                    android:text="@string/constants"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessons02_10"/>

                <ImageView
                    android:contentDescription="@string/less02_image10"
                    android:id="@+id/less02_image10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessons02_11"
                    android:layout_marginBottom="25dp"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <Button style="@style/button_style_previous"/>
                    <Button style="@style/button_style_lessons" />
                    <Button style="@style/button_style_next"/>

                </LinearLayout>

                <TextView
                    style="@style/textViewStrip"
                    android:text="@string/strip" />

            </LinearLayout>


        </ScrollView>



        <RelativeLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavView_Bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_grey_border_top"
                app:menu="@menu/bottom_navigation_menu">


            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </RelativeLayout>


    </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>