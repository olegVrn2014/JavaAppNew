<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lessons_oop.OopFourActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <TextView
                    style="@style/textViewZagolovok"
                    android:text="@string/lessonsOop04_01" />

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_02" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop04_image01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_03" />

                <TextView
                    style="@style/textViewZagolovok"
                    android:text="@string/lessonsOop04_04" />

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_05" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop04_image02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_06" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop04_image03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_07" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop04_image04"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textViewZagolovok"
                    android:text="@string/lessonsOop04_08" />

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_09" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop04_image05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_10" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop04_image06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_11" />

                <TextView
                    style="@style/textViewZagolovok"
                    android:text="@string/lessonsOop04_12" />

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_13" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop04_image07"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_14" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop04_image08"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_15" />

                <TextView
                    style="@style/textViewZagolovok"
                    android:text="@string/lessonsOop04_16" />

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_17" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop04_image09"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_18" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop04_image10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop04_19" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <Button style="@style/button_style_previous" />
                    <Button style="@style/button_style_lessons" />
                    <Button style="@style/button_style_next"/>

                </LinearLayout>

                <TextView
                    style="@style/textViewVersionName"
                    android:text="@string/versionNameApp" />

            </LinearLayout>


        </ScrollView>

        <RelativeLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavView_Bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_grey_border_top"
                app:menu="@menu/bottom_navigation_menu">


            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </RelativeLayout>





    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>