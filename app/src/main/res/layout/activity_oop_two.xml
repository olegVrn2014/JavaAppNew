<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lessons_oop.OopTwoActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <TextView
                    style="@style/textViewZagolovok"
                    android:text="@string/lessonsOop02_01" />

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop02_02" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop02_image01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop02_03" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop02_image02_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop02_image02_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop02_04" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop02_image03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop02_05" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop02_image04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop02_06" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop02_image05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop02_image06"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textViewZagolovok"
                    android:text="@string/lessonsOop02_07" />

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop02_08" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop02_image07"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop02_09" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop02_image08"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop02_10" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop02_image09"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop02_11" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop02_image10"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textViewZagolovok"
                    android:text="@string/lessonsOop02_12" />

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop02_13" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/lessOop02_image11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/lessonsOop02_14" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <Button style="@style/button_style_previous" />
                    <Button style="@style/button_style_lessons" />
                    <Button style="@style/button_style_next"/>

                </LinearLayout>

                <TextView
                    style="@style/textViewVersionName"
                    android:text="@string/versionNameApp" />

            </LinearLayout>


        </ScrollView>

        <RelativeLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavView_Bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_grey_border_top"
                app:menu="@menu/bottom_navigation_menu">


            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </RelativeLayout>





    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>