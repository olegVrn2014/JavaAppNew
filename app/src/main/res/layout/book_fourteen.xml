<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment03_books.BookFourteen">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <TextView
                    style="@style/textViewZagolovok"
                    android:text="@string/book14_title" />

                <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/book14_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>

                <TextView
                    style="@style/textView"
                    android:text="@string/book14_description" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <Button
                    android:id="@+id/buttonBook14"
                        android:text="@string/download_tom1"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textSize="20sp"
                        android:textAllCaps="false"
                        android:layout_marginEnd="5dp"
                        android:paddingRight="5dp"
                        style="@style/button_style_settings"
                        android:layout_height="wrap_content"/>

                    <Button
                    android:id="@+id/buttonBook14_02"
                        android:text="@string/download_tom2"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textSize="20sp"
                        android:paddingRight="5dp"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        style="@style/button_style_settings"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
                <TextView
                    style="@style/textViewVersionName"
                    android:text="@string/versionNameApp" />

            </LinearLayout>


        </ScrollView>

        <RelativeLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavView_Bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_grey_border_top"
                app:menu="@menu/bottom_navigation_menu">


            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </RelativeLayout>





    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>