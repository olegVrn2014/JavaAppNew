<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/main_menu"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomBar"
            tools:ignore="UnknownIdInLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                    android:id="@+id/image_view_launcher"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/java_logo"/>


                    <TextView
                        android:id="@+id/textNameApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="145dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/coda"
                        android:gravity="center"
                        android:padding="5dp"
                        android:background="@drawable/style_btn3_press"
                        android:layout_toEndOf="@+id/image_view_launcher"
                        android:text="@string/app_name"
                        android:textColor="@color/colorOrange"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/coda"
                        android:layout_below="@+id/textNameApp"
                        android:layout_toEndOf="@+id/image_view_launcher"
                        android:gravity="center"
                        android:text="@string/version" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:textSize="40sp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/coda"
                    android:textColor="@color/colorBlack"
                    android:text="@string/hello_friend" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/coda"
                    android:textColor="@color/colorBlack"
                    android:text="@string/main_description" />

            </LinearLayout>


        </ScrollView>


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>